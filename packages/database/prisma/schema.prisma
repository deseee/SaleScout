generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  password      String
  name          String
  role          String     @default("USER") // USER, ORGANIZER, ADMIN
  points        Int        @default(0)
  phone         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  referralCode  String     @unique
  organizer     Organizer?
  purchases     Purchase[]
  favorites     Favorite[]
  bids          Bid[]
  subscriptions SaleSubscriber[]
  userBadges    UserBadge[]
  referredUsers Referral[]  @relation("ReferrerToReferred")
  referredBy    Referral?   @relation("ReferredToReferrer")
  lineEntries   LineEntry[]
}

model Organizer {
  id              String   @id @default(cuid())
  businessName    String
  phone           String
  address         String
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])
  sales           Sale[]
  stripeConnectId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Sale {
  id            String     @id @default(cuid())
  title         String
  description   String?
  startDate     DateTime
  endDate       DateTime
  address       String
  city          String
  state         String
  zip           String
  lat           Float
  lng           Float
  photoUrls     String[]
  tags          String[]
  status        String     @default("DRAFT") // DRAFT, PUBLISHED, ENDED
  isAuctionSale Boolean    @default(false)
  earlyAccess   Boolean    @default(false)
  organizerId   String
  organizer     Organizer  @relation(fields: [organizerId], references: [id])
  items         Item[]
  favorites     Favorite[]
  subscribers   SaleSubscriber[]
  affiliateLink AffiliateLink?
  lineEntries   LineEntry[]
  purchases     Purchase[]
  reviews       Review[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Item {
  id               String    @id @default(cuid())
  title            String
  description      String?
  price            Float?
  auctionStartPrice Float?
  currentBid       Float?
  bidIncrement     Float?    @default(1)
  auctionEndTime   DateTime?
  status           String    @default("AVAILABLE") // AVAILABLE, SOLD, RESERVED, AUCTION_ENDED
  photoUrls        String[]
  saleId           String
  sale             Sale      @relation(fields: [saleId], references: [id])
  bids             Bid[]
  purchases        Purchase[]
  favorites        Favorite[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Favorite {
  id     String   @id @default(cuid())
  userId String
  user   User     @relation(fields: [userId], references: [id])
  saleId String?
  sale   Sale?    @relation(fields: [saleId], references: [id])
  itemId String?
  item   Item?    @relation(fields: [itemId], references: [id])
  @@unique([userId, saleId])
  @@unique([userId, itemId])
}

model Bid {
  id        String   @id @default(cuid())
  amount    Float
  status    String   @default("ACTIVE") // ACTIVE, WINNING, WON, LOST
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  itemId    String
  item      Item     @relation(fields: [itemId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Purchase {
  id                    String   @id @default(cuid())
  amount                Float
  status                String   @default("PENDING") // PENDING, PAID, REFUNDED
  userId                String
  user                  User     @relation(fields: [userId], references: [id])
  itemId                String?
  item                  Item?    @relation(fields: [itemId], references: [id])
  saleId                String?
  sale                  Sale?    @relation(fields: [saleId], references: [id])
  stripePaymentIntentId String?  @unique
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model SaleSubscriber {
  userId String
  user   User     @relation(fields: [userId], references: [id])
  saleId String
  sale   Sale     @relation(fields: [saleId], references: [id])
  phone  String?
  email  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@id([userId, saleId])
}

model Badge {
  id          String   @id @default(cuid())
  name        String   @unique
  description String
  iconUrl     String?
  criteria    Json     // conditions for earning the badge
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userBadges  UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  badgeId   String
  badge     Badge    @relation(fields: [badgeId], references: [id])
  awardedAt DateTime @default(now())

  @@unique([userId, badgeId])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  saleId    String
  sale      Sale     @relation(fields: [saleId], references: [id])
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
}

model Referral {
  id             String   @id @default(cuid())
  referrerId     String
  referrer       User     @relation("ReferrerToReferred", fields: [referrerId], references: [id])
  referredUserId String
  referredUser   User     @relation("ReferredToReferrer", fields: [referredUserId], references: [id])
  createdAt      DateTime @default(now())

  @@unique([referrerId, referredUserId])
}

model AffiliateLink {
  id        String   @id @default(cuid())
  saleId    String   @unique
  clicks    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sale      Sale     @relation(fields: [saleId], references: [id])
}

model LineEntry {
  id         String   @id @default(cuid())
  saleId     String
  sale       Sale     @relation(fields: [saleId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  position   Int
  status     String   @default("WAITING") // WAITING, NOTIFIED, ENTERED, CANCELLED
  notifiedAt DateTime?
  enteredAt  DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([saleId, userId])
}
