# Get all sales
curl http://localhost:3001/api/sales

# Filter by city
curl "http://localhost:3001/api/sales?city=Grand%20Rapids"

# Filter by date range
curl "http://localhost:3001/api/sales?startDate=2023-11-15&endDate=2023-11-30"

# Pagination
curl "http://localhost:3001/api/sales?page=1&limit=5"
