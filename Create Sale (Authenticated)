curl -X POST http://localhost:3001/api/sales \
  -H "Authorization: Bearer YOUR_TOKEN" \
  -H "Content-Type: application/json" \
  -d '{
    "title": "Test Sale",
    "description": "A test estate sale",
    "startDate": "2023-12-01T09:00:00Z",
    "endDate": "2023-12-02T17:00:00Z",
    "address": "123 Test Street",
    "city": "Grand Rapids",
    "state": "MI",
    "zip": "49503",
    "lat": 42.9634,
    "lng": -85.6681
  }'
